# Telegram Bot
BOT_TOKEN=your_bot_token_from_botfather
ADMIN_IDS=123456789,987654321

# 3X-UI Panel
# При запуске в Docker используй имя контейнера вместо localhost
XUI_API_URL=http://3x-ui:2053
XUI_BASE_PATH=/panel
XUI_USERNAME=admin
XUI_PASSWORD=your_password
# Хост, который будет использоваться в VLESS/SS ссылках (IP или домен)
XUI_HOST=your-vpn-host.example.com

# --- Multi-protocol Configuration ---
# Задается в виде JSON-массива. Каждый объект описывает один протокол.
# - name: vless, shadowsocks, trojan (должно совпадать с протоколом в 3X-UI)
# - inbound_id: ID соответствующего входящего подключения в 3X-UI
# - label: Название для кнопок в боте
# - description: Краткое описание для пользователя
# - recommended: true (опционально) - будет предлагаться по умолчанию
PROTOCOLS_CONFIG='[
  {"name": "vless", "inbound_id": 1, "label": "VLESS (Рекомендуемый)", "description": "Лучший для большинства случаев.", "recommended": true},
  {"name": "shadowsocks", "inbound_id": 2, "label": "Shadowsocks", "description": "Хорош для обхода сложных блокировок."}
]'

# Database (use absolute path for Docker)
DATABASE_URL=sqlite+aiosqlite:////app/data/vpn_bot.db

# Mini App (опционально, URL фронтенда Mini App для web_app-кнопки в боте)
MINIAPP_URL=https://vpn4friends-app.example.com

# Public domain for Mini App API (используется Caddy reverse proxy в Docker)
API_PUBLIC_DOMAIN=vpn4friends-api.example.com
